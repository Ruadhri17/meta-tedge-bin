# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "2"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  /dir/to/layers/poky/meta \
  /dir/to/layers/meta-poky \
  /dir/to/layers/poky/meta-yocto-bsp \
  /dir/to/layers/meta-openembedded/meta-oe \
  /dir/to/layers/meta-openembedded/meta-python \
  /dir/to/layers/meta-openembedded/meta-networking \
  /dir/to/layers/meta-tedge-bin \
  "
